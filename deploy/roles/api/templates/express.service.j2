[Unit]
Description=Express

[Service]
# Start the js-file starting the express server
ExecStart=/.nvm/versions/node/v{{ node_version }}/lib/node_modules/yarn/bin/yarn start
WorkingDirectory={{ src_dir }}/app
Restart=always
RestartSec=10
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=Express
# Change to a non-root user (optional, but recommended)
#User=<alternate user>
#Group=<alternate group>
# Set environment options
Environment=NODE_ENV=development PORT=9005

[Install]
WantedBy=multi-user.target
